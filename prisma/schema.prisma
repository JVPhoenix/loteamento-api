generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lotes {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  value              Int
  label              String
  price              Float
  size               String
  phase              Int
  situation          String
  reservedBy         String?
  reservedFor        String?
  reservedForContact String?
  reservedDate       String?
}

model Clients {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  cpf            String
  birth          String
  adress         String
  phone          String
  contractNumber String
  phase          Int
  lote           String
  dimension      String
  price          Float
  plan           Int
  startDate      String
  paymentList    String[] @default([""])
  standard       Boolean  @default(true)
  entrance       Float?
  obs            String?
}

model Photos {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  url    String
  type   String
  phase  Int
  width  Int?
  height Int?
}
